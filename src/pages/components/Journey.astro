---
/* src/components/Journey.astro */

const journeyStations = [
  { 
    period: "2013 - 2022", 
    title: "Allgemeine Hochschulreife", 
    location: "Carl-Orff-Gymnasium", 
    description: "Allgemeinbildung und Spezialisierung durch die Hochbegabtenförderung e.V. in Informatik." 
  },
  { 
    period: "2022 - 2027", 
    title: "Duales Verbundstudium Wirtschaftsinformatik B. Sc.", 
    location: "BMW AG & Hochschule München", 
    description: "Entwicklung eines Modells zur Berechnung des Volllastanteils für BMW Motorräder zur effizienteren Motorenauslegung, was die Zeit auf dem Prüfstand um mehr als 20% verkürzte." 
  },
  { 
    period: "Ab 2025", 
    title: "stv. Jugendleiter", 
    location: "Wasserwacht OG Lohhof", 
    description: "Entwicklung einer KI-Trainingsplanerstellungssoftware, die die Vorbereitungszeit der Trainer um zwei Drittel reduzierte und die Flexibilität drastisch erhöhte." 
  },
  { 
    period: "Ab 2026", 
    title: "muni", 
    location: "Munich", 
    description: "coming sooner" 
  },
  { 
    period: "Ab 2027", 
    title: "M. Sc.", 
    location: "International", 
    description: "coming later" 
  }
];
---

<section id="journey-section">
  <div class="section-header">
    <span class="section-label">02 // EXPERIENCE</span>
    <h2 class="section-title">My Journey</h2>
    <p class="section-subtitle">Die Stationen, die mein Verständnis von Systemen geprägt haben.</p>
  </div>

  <div class="timeline-container">
    <div id="timeline" class="timeline">
      {journeyStations.map(station => (
        <div class="station-card unified-card">
          <div class="card-header">
            <span class="period">{station.period}</span>
            <span class="location-badge">{station.location}</span>
          </div>
          <h3>{station.title}</h3>
          <p class="description">{station.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  #journey-section {
    /* MOBILE FIRST: Kompakter Abstand */
    padding: var(--spacing-large) 0;
    position: relative;
    overflow: hidden;
  }

  .timeline-container {
    width: 100%;
    height: auto; 
    /* WICHTIG: Puffer auf Mobile, damit Karten nicht am Rand kleben */
    padding: 0 1rem; 
  }

  .timeline {
    display: flex;
    /* MOBILE: Untereinander */
    flex-direction: column; 
    gap: 1rem; /* Kleiner Abstand zwischen Karten */
    width: 100%;
  }

  /* --- CARD STYLING (MOBILE BASE) --- */
  .station-card {
    width: 100%;
    /* FIX 1: Sehr kompaktes Padding für Mobile */
    padding: 1.25rem !important; 
    
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    transition: transform 0.3s ease, border-color 0.3s ease;
    /* FIX 2: Verhindert, dass Inhalt die Box sprengt */
    overflow-wrap: break-word;
  }

  .station-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-5px);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .period {
    color: var(--color-accent);
    font-weight: 700;
    font-family: 'Courier New', monospace;
    font-size: 0.85rem; /* Etwas kleiner */
  }

  .location-badge {
    font-size: 0.75rem; /* Etwas kleiner */
    color: var(--color-text-secondary);
    background: rgba(255,255,255,0.05);
    padding: 2px 8px;
    border-radius: 4px;
  }

  .station-card h3 {
    /* FIX 3: Kleinere Überschrift auf Mobile */
    font-size: 1.2rem; 
    margin: 0 0 0.75rem 0;
    color: var(--color-text-primary);
    line-height: 1.3;
  }

  .station-card .description {
    margin: 0;
    color: var(--color-text-secondary);
    font-size: 0.9rem; /* Etwas kleinerer Fließtext */
    line-height: 1.5;
  }

  /* --- DESKTOP UPGRADE (ab 768px) --- */
  @media (min-width: 768px) {
    #journey-section {
      padding: var(--spacing-xlarge) 0;
    }

    .timeline-container {
      height: 500px; 
      display: flex;
      align-items: center;
      padding: 0; 
    }

    .timeline {
      /* Zurück zum horizontalen Layout */
      flex-direction: row; 
      flex-wrap: nowrap;
      width: max-content;
      gap: var(--spacing-large);
      padding: 0 var(--spacing-xlarge);
    }

    .station-card {
      flex: 0 0 400px; 
      /* Große Abstände für Desktop zurück */
      padding: 2.5rem !important; 
    }

    .station-card h3 { font-size: 1.5rem; }
    .period { font-size: 0.9rem; }
    .station-card .description { font-size: 0.95rem; }
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  window.addEventListener('load', () => {
    // Animation NUR auf Desktop aktivieren
    ScrollTrigger.matchMedia({
      "(min-width: 768px)": function() {
        const timeline = document.querySelector("#timeline");
        if (!timeline) return;

        const amountToScroll = timeline.scrollWidth - window.innerWidth;

        if (amountToScroll > 0) {
          gsap.to(timeline, {
            x: -amountToScroll,
            ease: "none",
            scrollTrigger: {
              trigger: "#journey-section",
              pin: true,
              scrub: 1,
              end: () => `+=${amountToScroll + 200}`, 
              invalidateOnRefresh: true,
            }
          });
        }
      }
    });
  });
</script>
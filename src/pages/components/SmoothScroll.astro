<script>
  import Lenis from 'lenis'

  const lenis = new Lenis({
    duration: 1.2, // Wie lange dauert das Scrollen
    easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)), // Easing Funktion
    direction: 'vertical',
    gestureDirection: 'vertical',
    smooth: true,
    mouseMultiplier: 1,
    smoothTouch: false,
    touchMultiplier: 2,
  })

  function raf(time) {
    lenis.raf(time)
    requestAnimationFrame(raf)
  }

  requestAnimationFrame(raf)
</script>

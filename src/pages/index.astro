---
import '../styles/global.css';
import Hero from './components/Hero.astro';
import Journey from './components/Journey.astro';
import ProjectShowcase from './components/ProjectShowcase.astro';
import BentoGrid from './components/BentoGrid.astro';
import Research from './components/Research.astro';
import InteractiveBackground from './components/InteractiveBackground.astro';
import SmoothScroll from './components/SmoothScroll.astro';
import FloatingNav from './components/FloatingNav.astro';
import Footer from './components/Footer.astro';
---

<html lang="de">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/jonasicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Jonas | Portfolio</title>
        <style>
            /* Canvas sichtbar machen */
            body { background-color: transparent; }
            
            /* Footer-Fix: Mehr Platz nach unten */
            .grand-finale-spacer {
                height: 50vh; 
                display: flex;
                align-items: center;
                justify-content: center;
                pointer-events: none;
                /* HIER IST DIE Ã„NDERUNG: */
                padding-bottom: 10rem; /* Schiebt den Text hoch, weg von der Nav */
                box-sizing: border-box;
            }
            
            .scroll-hint {
                color: rgba(255, 255, 255, 0.4);
                font-family: monospace;
                font-size: 1rem;
                opacity: 0;
                animation: fadeIn 2s ease-in forwards 0.5s;
            }
            
            @keyframes fadeIn { to { opacity: 1; } }
        </style>
	</head>
	<body>
        <div class="noise-overlay"></div>
        <InteractiveBackground />
        <SmoothScroll />
        <FloatingNav />

		<main>
            <Hero />
            <Journey />
            <ProjectShowcase />
            <BentoGrid />
            <Research />          
            <Footer />
        </main>
	</body>
</html>